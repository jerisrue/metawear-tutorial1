<div class="container">
	<h2 class="header">Welcome to Ember</h2>
	<div class="row">
		<div class="s12">
			<h4>Device Connection</h4>
			{{#unless metawearConnected}}
				<button class="btn waves-effect waves-light green" {{action 'metawear_connect'}}>
					Connect to Metawear
				</button>
			{{else}}
				<button class="btn waves-effect waves-light red" {{action 'metawear_disconnect'}}>
					Disconnect
				</button>
			{{/unless}}
		</div>
	</div>
	{{outlet}}
</div>